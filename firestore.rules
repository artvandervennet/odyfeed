rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Actors collection - public read, admin write
    match /actors/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && hasRole(request.auth.uid, 'admin');
    }

    // Events collection - public read, admin write
    match /events/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && hasRole(request.auth.uid, 'admin');
    }

    // Posts collection - public read, authenticated users can create/manage their own
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.attributedTo == request.auth.uid;
      allow update, delete: if request.auth != null &&
                              resource.data.attributedTo == request.auth.uid;

      // Likes subcollection - anyone can read, authenticated users can add likes
      match /likes/{likeId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth != null && resource.data.actor == request.auth.uid;
      }
    }

    // Helper function to check user roles
    function hasRole(uid, role) {
      return get(/databases/$(database)/documents/users/$(uid)).data.roles[role] == true;
    }
  }
}

